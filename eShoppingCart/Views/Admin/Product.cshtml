@model IEnumerable<eShoppingCart.DAL.ProductM>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tblCetagory').DataTable();
    });
</script>

<div class="container">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Product</li>
    </ol>
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Cetagory Details
            <a href="../Admin/ProductAdd" class="btn btn-info pull-right" style="float:right">Add New</a>

        </h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="tblCetagory" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr No</th>
                        <th>Cetagory Name</th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr No</th>
                        <th>Product Name</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int count = 1 ;
                        <tr>
                            <td>@count</td>
                            <td>@item.ProductName</td>
                            <td>
                                @Html.ActionLink("Edit", "ProductEdit", new { productId = item.ProductId   })
                            </td>
                        </tr>
                        count++; 
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>